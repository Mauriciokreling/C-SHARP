@model Produto
<form asp-action="Cadastrar">
    <div class="form-group">
        <label>Nome:</label>
        <input type="text" class="form-control" asp-for="Nome" />
    </div>
    <div>
        <label>Descrição:</label>
        <input type="text" class="form-control" asp-for="Descricao"/>
    </div>
    <div class="form-group">
        <label>Preço:</label>
        <input type="text" class="form-control" asp-for="Preco"/>
    </div>
    <div class="form-group">
        <label>Quantidade:</label>
        <input type="text" class="form-control" asp-for="Quantidade"/>
    </div>
    <input type="submit" class="btn btn-primary" value="Cadastrar" />
</form>
