@model Produto
<form asp-action="Cadastrar">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input type="text" class="form-control" asp-for="Nome" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="Descricao"></label>
        <input type="text" class="form-control" asp-for="Descricao"/>
        <span asp-validation-for="Descricao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Preco"></label>
        <input type="text" class="form-control" asp-for="Preco" />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantidade"></label>
        <input type="text" class="form-control" asp-for="Quantidade" />
        <span asp-validation-for="Quantidade" class="text-danger"></span>
    </div>
    <input type="submit" class="btn btn-primary" value="Cadastrar" />
</form>
