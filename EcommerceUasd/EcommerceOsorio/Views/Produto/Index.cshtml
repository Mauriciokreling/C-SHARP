@model List<Produto>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    DateTime data = ViewBag.DataHora;
    List<Produto> produtos = ViewBag.Produtos;
}
  
        <h2>Gerenciamento dos produtos</h2>

        <a asp-action="Cadastrar">Cadastrar Produto</a>

        <table class="table table-hover table-striped">
            <thead>
                <tr class="table-dark">
                    <th>Nome</th>
                    <th>Descrição</th>
                    <th>Preco</th>
                    <th>Quantidade</th>
                    <th>Criado em</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (Produto item in produtos)
                {
                    <tr>
                        <td>@item.Nome</td>
                        <td>@item.Descricao</td>
                        <td>@item.Preco.ToString("C2")</td>
                        <td>@item.Quantidade</td>
                        <td>@item.CriadoEm</td>

                        <td><a asp-action="Alterar" asp-route-id="@item.ProdutoId" class="btn btn-warning btn-sm">Alterar</a></td>

                        <td><a asp-action="Remover" asp-route-id="@item.ProdutoId" class="btn btn-danger btn-sm">Remover</a></td>


                    </tr>
                }
            </tbody>
        </table>
        <p>
            <b>Dados atualizados em: </b>@data
        </p>
        